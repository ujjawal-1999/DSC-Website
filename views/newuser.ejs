    <div class="container">
      <div class="heading-block">
        <div>
          <h1>
            SignUp
            <span style="color: #0f1923"></span>
          </h1>
        </div>
      </div>

      <div class="signup-form">
        <form action="/dsc/user/signup" method="POST">
          <label for="codename">Full name</label
          ><input type="text" name="name" placeholder="Name" required />
          <label for="email">Email</label
          ><input
            type="email"
            name="email"
            placeholder="Email Address"
            required
          />
          <label for="sidearm">Password</label>
          <input
            type="password"
            id="password-field"
            type="password"
            name="password"
            placeholder="Password"
          />
          <label for="sidearm">Confirm Password</label>
          <input
            type="cpassword"
            id="cpassword-field"
            type="password"
            name="cpassword"
            placeholder="Retype Password"
          />
          <div class="button-box">
            <div class="button-mask button-mask-slide">
              <span>SignUp</span>
            </div>
          </div>
        </form>
        <p>
          <a href="">Forget Password ?</a><br /><br />
          or use social account
        </p>

