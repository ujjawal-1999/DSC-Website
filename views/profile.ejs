                        <p class="skill-level"><%= skill.level %></p>
                        <a
                          class="delete-ski"
                          href="/user/delete/skill/<%= skill._id %>"
                          ><img src="/img/profile/trash.svg" alt="delete icon"
                        /></a>
                      </div>

                      <%})%>
                    </div>
                  </div>
