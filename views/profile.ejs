          </div>
          <p></p>
          <img class="edill" src="/img/illustrations/editing.png" alt="illustration" />
        </div>
      </div>
      <div class="wrapper">
        <div id="subscribeBox">
          <form
            class="subscribeForm"
            method="post"
            action="/user/profile"
            onsubmit="return editProfileModalvalidate()"
            name="editprofileform"
          >
            <div class="flexRow">
              <label for="name">Name</label>
              <input
                id="name"
                type="text"
                value="<%=user.name%>"
                name="name"
                required
                maxlength="30"
              />
            </div>
            <hr size="1px" />
            <div class="flexRow">
              <label for="degree">Degree</label>
              <select name="degree" id="degree" required>
                <option value="Bachelor of Technology" selected>
                  Bachelor of Technology
                </option>
                <option value="Master of Technology">
                  Master of Technology
                </option>
                <option value="PHD">PHD</option>
              </select>
            </div>
            <div class="flexRow">
              <label for="branch">Branch</label>
              <select name="branch" id="branch" required>
                <option value="Computer Science and Engineering">CSE</option>
                <option value="Electrical Engineering">EE</option>
                <option value="Electronics and Communication Engineering">
                  ECE
                </option>
                <option value="Civil Engineering">CE</option>
                <option value="Electronics & Instrumentation">E&I</option>
              </select>
            </div>
            <div class="flexRow">
              <label for="batchYear">Batch Year</label>
              <select name="batchYear" id="batchYear">
                <option value="2020-24">2020-24</option>
                <option value="2019-23" selected>2019-23</option>
                <option value="2018-22">2018-22</option>
                <option value="2017-21">2017-21</option>
                <option value="2016-20">2016-20</option>
              </select>
            </div>
            <hr size="1px" />
            <div class="flexRow">
              <label for="bio">Bio</label>
              <input
                id="bio"
                type="text"
                placeholder="Something about you."
                name="bio"
                value="<% if(user.bio){%><%=user.bio%><%}%>"
                maxlength="50"
              />
            </div>
            <div class="flexRow">
              <label for="facebook"> Facebook </label>
              <input
                id="facebook"
                type="url"
                value="<% if(user.socialLinks['facebook']){%><%=user.socialLinks['facebook']%><%}%>"
                placeholder="Enter Your Facebook account URL"
                name="facebook"
                maxlength="200"
              />
            </div>
            <div class="flexRow">
              <label for="linkedin"> LinkedIn </label>
              <input
                id="linkedin"
                type="url"
                value="<% if(user.socialLinks['linkedin']){%><%=user.socialLinks['linkedin']%><%}%>"
                placeholder="Enter Your Linkedin account URL"
                name="linkedin"
                maxlength="200"
              />
            </div>

            <div class="flexRow">
              <label for="github"> Github </label>
              <input
                id="github"
                type="url"
                value="<% if(user.socialLinks['github']){%><%=user.socialLinks['github']%><%}%>"
                placeholder="Enter Your github profile URL"
                name="github"
                maxlength="200"
              />
            </div>
            <hr size="1px" />
            <div class="flexRow">
              <label for="email">Email</label>
              <input
                id="email"
                type="email"
                value="<%= user.email %>"
                name="email"
                disabled
              />
            </div>
            <div class="flexRow">
              <label for="password">Password </label>
              <div class="flexRow fullwidth">
                <!-- <p>Last Changed 2 months ago</p> -->
                <a href="">Change Password</a>
              </div>
            </div>
            <br /><br />
            <div class="flexRow fullwidth">
              <input
                id="submit_editprofile"
                class="submit"
                type="submit"
                value="Save Changes"
                required
              />
              <!-- <a href="">Deactivate My Account</a> -->
            </div>
          </form>
        </div>
      </div>
    </div>
