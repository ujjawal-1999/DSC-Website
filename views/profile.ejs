                    <div class="flexRow">
                      <h3>PROJECTS</h3>
                      <div class="flexRow">
                        <p>Want to showcase more Projects ?</p>
                        <button class="addExperience" id="addProject">
                          Click here
                        </button>
                      </div>
                    </div>
                    <section class="grid-item main">
                      <% if(user.personalProjects.length==0){%>
